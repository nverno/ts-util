{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime": {
      "version": "LuaJIT"
  },
  "workspace": {
    "library": [
      "lua",
      "$VIMRUNTIME",
      "${3rd}/luv/library",
      "~/src/neovim/runtime/lua",
      "~/src/nvim-treesitter/lua"
    ],
    "checkThirdParty": false
  },
  "diagnostics": {
    "groupFileStatus": {
      "strict": "Opened",
      "strong": "Opened"
    },
    "groupSeverity": {
      "strong": "Warning",
      "strict": "Warning"
    },
    "unusedLocalExclude": [ "_*" ]
  }
}
